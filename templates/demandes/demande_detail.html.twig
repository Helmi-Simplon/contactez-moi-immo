{% extends 'base.html.twig' %}

{% block title %}CONTACTEZ-MOI IMMO DEMANDES
{% endblock %}
{% block stylesheets %}
	<style>

		body {
			background-image: url('{{asset("assets/images/profil/house.jpg")}}');
			background-size:cover;
			background-attachment: fixed;
		}
		.card {
			background-color: #0093E9;
			background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
			max-width: 35%;
			min-width:30%;
			height: auto;
			color: white;
			text-align:center;
			padding-bottom:50px;
			padding-left:10px;
			padding-right:10px;
			margin-left:auto;
			margin-right:auto;
			border-radius:5%;
			border: 5px solid skyblue;
			color: whitesmoke;
			text-shadow:1px 1px 2px black, 0 0 1em gray, 0 0 0.2em white;

		}
		.card img{
			position:relative;
		}

		.heading {
			font-weight: 900;
			color: white;

		}

		.hour {
			margin-top: 1px;
			color: white;
			font-size: 12px;
			text-align: center;
		}

		.btn {
			border-radius: 70px;
			color: white;
			border-color: white;
		}

		.info{
			margin-left:auto;
			margin-right:auto;
			color:wheat;
			text-shadow:1px 1px 2px black, 0 0 1em gray, 0 0 0.2em white;
		}
	</style>
{% endblock %}
{% block titre %}
	<div class="info">et voici les détails...<br></div>
	<div class="info">Let's read it! </div>
{% endblock %}
{% block body %}
	<main>
		<div class="d-flex">				
			<div class="card mt-5">
				<span class="hour"> diffusé{{ demande.dateDemande | ago }}</span>
				<hr>
				<div>
				{% for acheteurs in demande.acheteur.image %}
					<img src="{{ asset('assets/images/profil/' ~ acheteurs.urlImage ) }}" class="rounded-circle" width="200" style="border:2px solid wheat"/>
				{% endfor %}
				<br>
				{{ demande.acheteur.prenom }} {{ demande.acheteur.nom }}
				</div>
				<hr>
				Budget :
				<div>
					<legend>{{ demande.budget}}€</legend>
				</div>
				Type de Bien :
				<div>
					<legend>{{ demande.typeBien }}</legend>
				</div>
				Nombre de Pièce :
				<div>
					<legend>{{ demande.nbrePieces }}</legend>
				</div>
				Zone de recherche :
				<div>
					{% for adresse in demande.adresses %}
					<legend>{{ adresse.ville }}</legend>					
					{% endfor %}
				</div>
				<hr>
				Description :
				<p>{{ demande.description}}</p>
			</div>
		</div>

	</main>
{% endblock %}

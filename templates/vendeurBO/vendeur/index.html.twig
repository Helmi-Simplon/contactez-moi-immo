{% extends 'vendeurBO/base.html.twig' %}

{% block title %}CONTACTEZ MOI IMMO ESPACE VENDEUR
{% endblock %}
{% block titre %}MON ESPACE VENDEUR
{% endblock %}

{% block body %}
	<main>
		<div class="container">

			<table class="table table-hover">
				<h4 class="text-secondary">INFOS PROFIL</h4>
				<hr>

				<tbody>
					<tr class="table-active">
						<th scope="row">
							<div class="h6">COURRIEL</div>
						</th>
						<td class="text-secondary">{{ app.user.email }}</td>
					</tr>
					<tr class="table-active">
						<th scope="row">
							<div class="h6">PRENOM</div>
						</th>
						<td class="text-secondary">{{ app.user.prenom }}</td>
					</tr>
					<tr class="table-active">
						<th scope="row">
							<div class="h6">NOM</div>
						</th>
						<td class="text-secondary">{{ app.user.nom }}</td>
					</tr>
					<tr class="table-active">
						<th scope="row">
							<div class="h6">TELEPHONE</div>
						</th>
						<td class="text-secondary">{{ app.user.numeroTelephone }}</td>
					</tr>
					<tr class="table-active">
						<th scope="row">
							<div class="text h6">STATUS</div>
						</th>
						{% if app.user.actif == 1 %}
							<td class="text-success">Actif</td>
						{% else %}
							<td class="text-danger">
								Inactif</td>
						{% endif %}
					</tr>

				</tbody>
			</table>

		</div>
	</main>

{% endblock %}

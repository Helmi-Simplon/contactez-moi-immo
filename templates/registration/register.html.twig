{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
<div class="container my-5">
    <legend class="text-center">ENREGISTREMENT</legend>
    
    <div class="my-5">
    {{ form_start(registrationForm) }}
    <div class="text-center">
        {{ form_row(registrationForm.roles, {

        label: 'Vous êtes :'
        
        }) }}
    </div>
        {{ form_row(registrationForm.email, {
        label: 'Courriel'
        }) }}
        
        {{ form_row(registrationForm.prenom, {
        label: 'Prénom'
        }) }}

        {{ form_row(registrationForm.nom, {
        label: 'Nom'
        }) }}

        {{ form_row(registrationForm.numero_telephone, {
        label: 'Téléphone'
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.image, {
        label: 'Ajouter une photo de profil'
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'J\'accepte les termes d\'utilisation'
        }) }}
        <div class="text-center">
        <button type="submit" class="btn btn-primary my-3">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}

{% extends 'adminBO/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    /* .x{ margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; } */
    .container { background: #F5F5F5; padding: 2px 6px; }
    
    

</style>

<div class="container">
    <h1>Gestion des utilisateurs</h1>
    <hr>

    <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">email</th>
      <th scope="col">rôle</th>
      <th scope="col">nom</th>
      <th scope="col">prénom</th>
      <th scope="col">téléphone</th>
      <th scope="col">statut</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th scope="col">id</th>
      <th scope="col">email</th>
      <th scope="col">rôle</th>
      <th scope="col">nom</th>
      <th scope="col">prénom</th>
      <th scope="col">téléphone</th>
      <th scope="col">statut</th>
    </tr>
  </tfoot>
  <tbody class="">
  {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td>{{ user.email }}</td>
      <td>{% for role in user.roles %} {{ role }} {% endfor %}</td>
      <td>{{ user.nom }}</td>
      <td>{{ user.prenom }}</td>
      <td>{{ user.numeroTelephone }}</td>
      {% if user.actif == 1 %}
      <td>Activé</td>
      {% else %}
      <td>Désactivé</td>
      {% endif %}
      </tr>
      <tr>
      <td class="text-center" colspan="9">
      
     <a class="btn btn-sm btn-outline-success" href="" >Modifier</a>
     {% if user.actif == 1 %}
      <a class="btn btn-sm btn-outline-warning" href="">Désactiver</a>
      {% else %}
      <a class="btn btn-sm btn-outline-warning" href="">Activer</a>
      {% endif %}
        <a class="btn btn-sm btn-outline-danger" href="">Supprimer</a>    </tr>
    {% endfor %}

    </tbody>
</table>
</div>
 
{% endblock %}

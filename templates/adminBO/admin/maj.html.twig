{% extends 'adminBO/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Mettre à jour les données utilisateur</h1>
    <hr>

    <div class="container my-5">
    
    <div class="my-5">
    {{ form_start(form) }}
    <div class="text-center">
        {{ form_row(form.roles, {

        label: 'Rôle :'
        
        }) }}
    </div>
        {{ form_row(form.email, {
        label: 'Courriel'
        }) }}
        
        {{ form_row(form.prenom, {
        label: 'Prénom'
        }) }}

        {{ form_row(form.nom, {
        label: 'Nom'
        }) }}

        {{ form_row(form.numero_telephone, {
        label: 'Téléphone'
        }) }}

        
        <div class="text-center">
        <button type="submit" class="btn btn-primary my-3">Mettre à jour</button>
        </div>
    {{ form_end(form) }}
    </div>
    </div>
    
</div>
{% endblock %}
